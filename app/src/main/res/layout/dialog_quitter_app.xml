<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:background="@color/noir"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"

            android:text="Confirmation"
            android:textColor="@color/blanc"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:fontFamily="@font/ubuntu"/>

        <ImageView
            android:id="@+id/boutonAnnulerQuitter"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="24dp"

            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/blanc"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_gravity="center"

        android:text="Vous allez être déconnecté, souhaitez-vous quitter l'application ?"
        android:textColor="@color/noir"
        android:textAlignment="center"
        android:fontFamily="@font/ubuntu"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/boutonQuitterApp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="Quitter"
            android:textSize="16sp"
            android:textColor="@color/noir"
            android:fontFamily="@font/ubuntu"
            android:background="@drawable/bouton_primaire_selector"/>

    </LinearLayout>

</LinearLayout>